    <ul class="fa-ul">
      <li><i class="fa-li fa fa-check"></i> Eget pressrum</li>
      <li>bla bla</li>
    </ul>
    <script
      class="stripe-button"
      <% if current_press_room.subscription_type == "trial_standard" %>
      data-description="Standard"
      data-amount="29500"
      data-label="Köp standard"
      <% elsif current_press_room.subscription_type == "standard" %>
      data-description="Standard"
      data-amount="29500"
