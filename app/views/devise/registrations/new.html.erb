<div class="short-page">
  <div class="container">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="panel pandel-default">
        <div class="panel-body">
          <form role="form">
              <div class="form-group">
                  <label for="inputEmail2">Epost</label>
                  <input type="email" class="form-control" id="exampleInputEmail1" placeholder="">
              </div>
              <div class="form-group">
                  <label for="inputPassword3">Lösenord</label>
                  <input type="password" class="form-control" id="inputPassword3" placeholder="">
                  
              </div>
              <div class="checkbox">
                  <label>
                      <input type="checkbox"> <small>Jag har läst och accepterar NewsHubbys <a href="/terms_of_service" target="_blank">användarvillkor</a>.</small>
                  </label>
              </div>
              <button type="submit" class="btn btn-primary btn-lg btn-block">Registrera dig</button>
          </form>
          <a href="#"><small>Redan medlem? Logga in här</small></a>
        </div>
      </div>
    </div>
  </div>
  <div class="push"></div>
</div>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
