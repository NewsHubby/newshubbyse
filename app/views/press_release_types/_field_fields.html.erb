<fieldset>
	<hr style="border-color: grey !important;">
	<%= f.select :field_type, %w[text_field check_box number_field date_select line_break] %><br>
    <%= f.label :name %><br>
	<%= f.text_field :name, placeholder: "field_name", class: "form-control" %><br>
	<%= f.label :question %><br>
	<%= f.text_field :question, placeholder: "Question", class: "form-control" %><br>
	<%= f.label :example %><br>
	<%= f.text_area :example, placeholder: "Example", class: "form-control", rows: "3" %><br>
	<%= f.label :tip %><br>
	<%= f.text_area :tip, placeholder: "Tip", class: "form-control", rows: "3" %><br>
	<%= f.label :prefill %><br>
	<%= f.text_field :prefill, placeholder: "Prefill text", class: "form-control" %><br>
	<%= f.check_box :required %><%= f.label :required %>
	<%= f.hidden_field :_destroy %>
	<%= link_to "[remove]", "#", class: "remove_fields" %>
	<br>
</fieldset>