    <%= f.text_area :preferred1 %>
  </div>
  <div class="field">
    <%= f.label :distribution_date %><br>
    <%= f.datetime_select :distribution_date %>
  </div>
  <div class="field">
    <%= f.label :misc_information %><br>
    <%= f.text_area :misc_information %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
