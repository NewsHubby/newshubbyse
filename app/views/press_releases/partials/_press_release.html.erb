<%= render 'press_releases/partials/static_top' %>

<%= render 'press_releases/fields/handle_date' %>


<% @press_release.properties.each do |name, value| %>

    <% if value == "break" %>
     <br><br>
 <% else %>
     <% if name == "this_will_have_newline_applied" %>
     <%= simple_format(h(value)) %>
     <% else %>
     <%= value %>
     <% end %>
    <% end %>

<% end %>

<%= render 'press_releases/partials/static_bottom' %>

<script>
    $(document).ready(function(){
        $(".footer").hide();
    });
</script>
