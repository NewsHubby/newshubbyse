<div class="question" id="q<%= field_counter+2 %>">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-question-circle fa-lg intHelp pull-right hidden-xs text-primary hints" id="" data-toggle="tooltip" data-placement="left" title="Toggle help"></i>
                        <p class="panel-title text-left"><%= field.question.gsub(/CompanyName/, "#{@press_room.company_name}").gsub(/CompanyName's/, "#{@press_room.company_name}") %></p>
                    </div> <!-- / .panel-heading -->
                    <div class="panel-body">
    					<% field_name = field.name.to_sym %>
    					<% if @press_release.properties[field_name].blank? %>
    		        <%= f.text_area field.name, class: "form-control fixed-textarea", rows: "4", id: "textarea", onfocus: "this.value = this.value;", value: "#{field.prefill.gsub(/CompanyName/, "#{@press_room.company_name}").gsub(/CompanyName's/, "#{@press_room.company_name}")}" %>
    					<% elsif field_name == :text_manual %>
    		      	<%= f.text_area field.name, class: "form-control fixed-textarea", rows: "14", id: "textarea", onfocus: "this.value = this.value;" %>
    					<% else %>
    					<%= f.text_area field.name, class: "form-control fixed-textarea", rows: "4", id: "textarea", onfocus: "this.value = this.value;" %>
    					<% end %>
                    <h5>
                        <span class="text-primary"><strong>Exempel: </strong></span>
                    </h5>
                    <p>
                        <%= simple_format(field.example) %>
                    </p>
                    </div> <!-- / .panel-body -->
                </div> <!-- / .panel -->
            </div> <!-- / .col-xs-12 -->
        </div> <!-- / .row -->
    </div> <!-- / .container-fluid -->
</div> <!-- / .question -->

<% if @nr_questions %>
<div class="overlay-message" id="modal<%= field_counter+2 %>">
<% else %>
<div class="overlay-message" id="modal<%= field_counter+2 %>">
<% end %>
		<div class="panel panel-default">
        <div class="panel-body">
            <button type="button" class="close closeModal" id="closeIntHints"><span aria-hidden="true">&times;</span><span class="sr-only">St√§ng</span></button>
            <h5>
                <span class="text-primary"><strong>Exempel: </strong></span>
            </h5>
            <p>
                <%= simple_format(field.example) %>
            </p>
            <br>
            <h5>
                <span class="text-primary"><strong>Tips: </strong></span>
            </h5>
            <p>
             	<%= simple_format(field.tip) %>
            </p>
        </div> <!-- / .panel-body -->
    </div> <!-- / .panel -->
</div> <!-- / .overlay-message -->